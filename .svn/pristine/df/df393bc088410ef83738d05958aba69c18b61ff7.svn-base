.conBox{
	padding-top:4.5rem;
}
.conTop img{width:9rem;}
.conTips,.numAdd,.carEditBox{overflow: hidden;}
.priceY,.numAdd span,.numAdd div,.allCheck{float: left;}
.goShopping,.numAdd,.allPrice{float: right;}

/*an niu*/
.goShopping{
	color:#fff;background: #cc0e28;padding:.5rem 1rem;border-radius: .3rem;
}
.priceY{color:#cc0e28;font-size: 1.4rem;}

.numAdd span{display: inline-block;width: 3rem;height: 1.5rem;line-height:1.5rem;text-align:center;border:solid 1px #eee;border-radius: .3rem;}
span.del{
border-top-right-radius:0;
border-bottom-right-radius:0;
}
span.add{
	border-top-left-radius:0;
border-bottom-left-radius:0; 
}
.numAdd input{text-align:center;color:#777;height:1.5rem;line-height:1.5rem;width: 3rem;border:none;border-top:solid 1px #eee;border-bottom:solid 1px #eee;}

/*tuijian*/
.typeTitle{font-size: 1.4rem;color:#777;text-align: center;margin:1rem;
}
/*mobil shangcheng */
.videoList {overflow: hidden;}
.videoConT{width: 100%;}

.pushMore{text-align: center;color:#aaaaaa;margin-bottom: 1rem;}

/*kefu*/
.kefuBox{background:#fff;clear: both;padding: 1rem 0;}
.kefuBox h4{color:#666;margin:1.5rem;}
.kefuBox h4,.kefuBox p{text-align: center;margin-bottom: 1rem;}
.kefuBox p{font-size: 1rem;}

/*购物车底部*/
.carEditBox{-webkit-flex: 7;flex: 7;}
.goPay{-webkit-flex: 3;flex: 3;font-size:1.8rem;background:#ff9900;color:#fff;text-align: center;line-height: 4rem;}
.allCheck{line-height: 4rem;margin-left: 1rem;}
.allCheck input{margin-right: .5rem;}
.allPrice p{height:2rem;line-height: 2rem;margin-right: 1rem;}
.heji span{color:#ff9900;}
.yunfei{color:#aaaaaa;}

/*order*/
.orderItem{-webkit-flex: 1;flex: 1;text-align: center;}
.orderItem p{color:#777;}
.orderActive p{color:#ff9900;border-bottom:solid 1px #ff9900;}









